<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white"
    android:padding="16dp"
    android:layout_margin="8dp"
    android:elevation="4dp">

    <!-- En-tête : Catégorie et Date -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="8dp">

        <!-- Nom de la catégorie -->
        <TextView
            android:id="@+id/tvHistoryCategoryName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Informatique"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/primary_color" />

        <!-- Date -->
        <TextView
            android:id="@+id/tvHistoryDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12/01/2025"
            android:textSize="14sp"
            android:textColor="@color/text_secondary" />

    </LinearLayout>

    <!-- Score et Pourcentage -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!-- Score -->
        <TextView
            android:id="@+id/tvHistoryScore"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Score : 20 / 30"
            android:textSize="16sp"
            android:textColor="@color/text_primary" />

        <!-- Pourcentage -->
        <TextView
            android:id="@+id/tvHistoryPercentage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="67%"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/correct_answer" />

    </LinearLayout>

</LinearLayout>